{
  "name": "tweednacl",
  "targetType": "library",
  "description": "A crypto library for D.",
  "copyright": "Copyright © 2014, Gyula László",
  "license": "BSL-1.0",
  "authors": ["Gyula László"],
  "versions": [
    "TweedNaClLargeBufferTests",
    "TweedNaClUseStdSHA512",
    "TweedNaClUseFastMath25519"
  ],
  "dependencies": { },
  "configurations": [
    {
      "name": "libtweednacl",
      "targetPath": "lib",
      "targetType": "library",
      "versions": ["WithTweedNaCl"],
      "excludedSourceFiles": [
        "source/bench.d"
      ]
    },
    {
      "name": "tweedbench",
      "targetPath": "bin",
      "targetType": "executable",
      "mainSourceFile": "source/bench.d",
      "lflags": ["$PACKAGE_DIR/vendor/tweetnacl.o"],
      "libs": ["sodium"],
      "versions": [
        "TweedNaClUseTweetNaCl",
        "TweedNaClUseNaCl"
      ]
    }
  ],
  "buildTypes": {
    "release": {
      "buildOptions": ["releaseMode", "optimize", "inline", "noBoundsCheck"]
    },
    "docs": {
      "buildOptions":  ["syntaxOnly"],
      "dflags": ["-c", "-Dddocs", "$PACKAGE_DIR/tweednacl.ddoc"]
    }

  }
}
